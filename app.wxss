
/**app.wxss**/

.page{
  -ms-text-size-adjust: 100%;
  -webkit-text-size-adjust: 100%;
  font-family: Microsoft Yahei, 'Roboto', sans-serif;
  line-height: 1.4;
}

.section{
  margin:30rpx;
}

.border-box{
  box-sizing: border-box;
}

.toolbar-footer{
  position: fixed;
  bottom: 0;
  width: 100%;
  padding:20rpx;
  box-sizing: border-box;
  background: #f1f1f1;
}

.full-size{
  position: fixed;
  width:100%;
  height: 100%;
}

.flex-row{
  display: flex;
  flex-direction:row;
  align-items:center;
}
.flex-column{
  display: flex;
  flex-direction:column;
}

.flex-center{
  align-items:center;
  justify-content:center;
}

.flex-auto{
  flex: auto;
}

.border{
  margin: 20rpx 0;
  border-top:1rpx solid #D9D9D9;
}

.border-top{
  border-top: 1rpx solid #D9D9D9;
}
.border-bottom{
  border-bottom: 1rpx solid #D9D9D9;
}

.list-item{
  margin: 30rpx;
  background-color: #fff;
  overflow: hidden;
  border-radius: 4rpx;
  cursor: pointer;
}
.list-item-thumbnail{
  width:160rpx;
  height:120rpx;
}
.list-item-title{
  font-size:26rpx;
  text-overflow:ellipsis;white-space:nowrap;overflow:hidden
}
.list-item-desc{
  font-size:20rpx;
}


.p10{
  padding:10rpx;
}
.p20{
  padding:20rpx;
}
.p30{
  padding:30rpx;
}
.p40{
  padding:40rpx;
}
.pr10{
  padding-right: 10rpx;
}
.pl10{
  padding-left: 10rpx;
}
.plr10{
  padding:0 10rpx;
}
.pr20{
  padding-right: 20rpx;
}
.pl20{
  padding-left: 20rpx;
}
.plr20{
  padding:0 20rpx;
}

.mb20{
  margin-bottom:20rpx;
}
.mb30{
  margin-bottom:30rpx;
}
.mb40{
  margin-bottom:40rpx;
}

.text-center{
  text-align: center;
  margin-left: auto;
  margin-right:auto;
}
.text-bold{
  font-weight: bold;
}
.text-ls{
  letter-spacing: 1px;
}
.text-big{
  font-size:40rpx;
}
.text-title{
  font-size:32rpx;
}
.text-desc{
  font-size:28rpx;
}
.text-small{
  font-size:24rpx;
}
.text-gray{
